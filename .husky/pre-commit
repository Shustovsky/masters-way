#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

WEBAPP="mw-webapp/"
SERVER="mw-server/"
GENERAL_BFF="mw-general-bff/"
MOBILE="mw-mobile/"
CHAT="mw-chat/"
CHAT_BFF="mw-chat-bff/"
STORAGE="mw-storage/"
SURVEY="mw-survey/"
NOTIfICATION="mw-notification/"
NOTIFICATION_BFF="mw-notification-bff/"

generateSwaggerDocs () {
  pnpm swag
}

generateDbSchemas () {
  pnpm db:generate
}

preventUncommitedChanges () {
  # Check for uncommitted changes
  git diff --exit-code
  if [ $? -ne 0 ]; then
    echo "Changes detected after running swag. Please add the generated files before committing."
    exit 1
  fi
}

runWebappIfChanged () {
  if git diff --name-only --cached | grep "$WEBAPP"
  then
    echo "webapp changed. checking..."
    pnpm web:lint-staged
    pnpm concurrently \
        "pnpm web:type-check" \
        "pnpm web:test" \
        "pnpm web:build-storybook" \
        "pnpm web:build" \
        "pnpm web:cypress:component:run"
  fi
}

runServerIfChanged () {
  if git diff --name-only --cached | grep "$SERVER"
  then
    echo "mw-server changed. checking..."
    pnpm server:build
    pnpm server:test
  fi
}

runGeneralBffIfChanged () {
  if git diff --name-only --cached | grep "$GENERAL_BFF"
  then
    echo "mw-general-bff changed. checking..."
    pnpm general-bff:build
    pnpm general-bff:test
  fi
}

runChatIfChanged () {
  if git diff --name-only --cached | grep "$CHAT"
  then
    echo "mw-chat changed. checking..."
    pnpm chat:build
    pnpm chat:test
  fi
}

runChatBffIfChanged () {
  if git diff --name-only --cached | grep "$CHAT_BFF"
  then
    echo "mw-chat-bff changed. checking..."
    pnpm chat-bff:build
    pnpm chat-bff:test
  fi
}

runChatWebsocketIfChanged () {
  if git diff --name-only --cached | grep "$CHAT_BFF"
  then
    echo "mw-chat-websocket changed. checking..."
    pnpm chat-websocket:build
    pnpm server:test
  fi
}

runStorageIfChanged () {
  if git diff --name-only --cached | grep "$STORAGE"
  then
    echo "mw-storage changed. checking..."
    pnpm storage:build
    pnpm storage:test
  fi
}

runSurveyIfChanged () {
  if git diff --name-only --cached | grep "$SURVEY"
  then
    echo "mw-survey changed. checking..."
    pnpm survey:build
    pnpm survey:test
  fi
}

runNotificationIfChanged () {
  if git diff --name-only --cached | grep "$NOTIfICATION"
  then
    echo "mw-notification changed. checking..."
    pnpm notification:build
    pnpm notification:test
  fi
}

runNotificationBffIfChanged () {
  if git diff --name-only --cached | grep "$NOTIFICATION_BFF"
  then
    echo "mw-notification-bff changed. checking..."
    pnpm notification-bff:build
    pnpm notification-bff:test
  fi
}

runMobileIfChanged () {
  if git diff --name-only --cached | grep "$MOBILE"
  then
    echo "mw-mobile changed. checking..."
    pnpm mobile:build
    pnpm mobile:test
  fi
}


runE2E () {
  pnpm web:cypress:e2e:run
}

generateSwaggerDocs
generateDbSchemas

preventUncommitedChanges

runWebappIfChanged
runServerIfChanged
runChatIfChanged
runChatBffIfChanged
runChatWebsocketIfChanged
runStorageIfChanged
runSurveyIfChanged
runMobileIfChanged

runE2E
